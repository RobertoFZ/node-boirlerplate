{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "paths": {
      "@config/*": [
         "src/config/*"
      ]
   },
   "include": [
      "src/**/*.ts",
      "src/server.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}